    <script>
        $(document).ready(function ($) {
            $("#contents").on("submit", "form", function (event) {
                event.preventDefault();
                var formData = $(this).serializeArray();
                var additionalData = {
                    session: $("#sessionSelector").val(),
                    class: $("#classSelector").val(),
                    term: $("#termSelector").val(),
                };
                var data = formData.reduce(function (obj, item) {
                    obj[item.name] = item.value;
                    return obj;
                }, additionalData);
                $.ajax({
                    type: "POST",
                    url: window.location.href,
                    data: data,
                    success: function (data) {
                        //Code to handle successful submission
                        alert("Changes were saved successfuly!");
                    },
                    error: function (xhr, status, error) {
                        //Code to handle error
                        alert("ho");
                    }
                });
            });

            $("#passwordForm").submit(function (event) {
                event.preventDefault();
                var form = $(this);
                var action = form.attr('action');
                var formData = form.serialize();
                $.ajax({
                    type: "POST",
                    url: action,
                    data: formData,
                    success: function (data) {
                        if (data.success) {
                            $(".modal-body").html("<h5>Your password was changes successfully.");
                            setTimeout(function () {
                                window.location.href = "/admin";
                            }, 2000);
                        } else {
                            alert("The Old Password you entered is invalid! Try again.");
                            setTimeout(function () {
                                location.reload();
                            }, 2000);
                        }
                    },
                    error: function (error) {
                        alert('Oops! Somerhing happened. Pls try again later');
                    }
                });
            });
        });

        function updateData() {
            fetch('/admin/<%= school_obj.name %>/getStudents', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    session: $("#sessionSelector").val(),
                    class: $("#classSelector").val(),
                    term: $("#termSelector").val(),
                })
            }).then(res => res.json()).then(data => {
                var payload = data.payload;
                var content = '';
                if (payload < 1) {
                    $('#contents').html('Students not added yet');
                    return;
                }

                content = '<form id="chkform" method="post">';

                payload.forEach((item, index) => {
                    var chk = '';
                    if (item.fees) {
                        chk = 'checked';
                    }
                    content += `
                  <input type="checkbox" id="student${index + 1}" name="${item.name}" value="${index + 1}" ${chk}>
                  <label for="item1">${item.name}</label>
                  <br>
                    `
                });

                content += `
        <input type="submit" value="submit" id="subBtn" style="display:none;">
        </form>`;

                $('#contents').html(content);
            });
            return;
        }

        function convertFormToJSON(form) {
            const array = $(form).serializeArray(); // Encodes the set of form elements as an array of names and values.
            const json = {};
            $.each(array, function () {
                json[this.name] = this.value || "";
            });
            return json;
        }
    </script>

