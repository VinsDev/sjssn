  <!-- Vendor JS Files -->
  <script src="../../admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../../admin/assets/vendor/quill/quill.min.js"></script>
  <script src="../../admin/assets/vendor/tinymce/tinymce.min.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/gasparesganga-jquery-loading-overlay@2.1.7/dist/loadingoverlay.min.js"></script>

  <!-- Template Main JS File -->
  <script src="../../admin/assets/js/main.js"></script>

  <script>
    $(document).ready(function () {
      $("#passwordForm").submit(function (event) {
        event.preventDefault();
        var form = $(this);
        var action = form.attr('action');
        var formData = form.serialize();
        $.ajax({
          type: "POST",
          url: action,
          data: formData,
          success: function (data) {
            if (data.success) {
              $(".modal-body").html("<h5>Your password was changes successfully.");
              setTimeout(function () {
                window.location.href = "/admin";
              }, 2000);
            } else {
              alert("The Old Password you entered is invalid! Try again.");
              setTimeout(function () {
                location.reload();
              }, 2000);
            }
          },
          error: function (error) {
            alert('Oops! Somerhing happened. Pls try again later');
          }
        });
      });
      $("#newsForm").submit(function (event) {
        event.preventDefault();
        var form = $(this);
        var action = form.attr('action');
        var formData = $(this).serialize();
        $(".modal-content").LoadingOverlay("show");
        $.ajax({
          type: "POST",
          url: action,
          data: formData,
          success: function (data) {
            location.reload();
          },
          complete: function () {
            $(".modal-body").LoadingOverlay("hide", true);
          },
          error: function (error) {
            alert('Something went wrong. Please try again.');
          }
        });
      });

    })

    function del(id) {
      var newsIndex = parseInt(id.match(/\d+/));
      $.LoadingOverlay("show");
      $.ajax({
        url: window.location.href + '/delete',
        type: 'POST',
        data: {
          news_index: newsIndex
        },
        success: function (data) {
          location.reload();
        },
        complete: function () {
          $.LoadingOverlay("hide", true);
        },
        error: function (error) {
          alert("Something happened !")
        }
      })
    }

  </script>
</body>

